<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#171717"
                android:id="@+id/eventListName"
                android:text="Event List"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/eventListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/1970"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textSize="16dp"
                android:id="@+id/eventListStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in-progress"
                />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/eventListTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 of 7 tasks completed"
                />
        </LinearLayout>

        <TextView
            android:textColor="@color/main_color"
            android:textSize="16dp"
            android:id="@+id/eventListDaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Days Left"
            />

    </LinearLayout>
</LinearLayout>